<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="ui.EditUserController"
  xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15">

  <columnConstraints>
    <ColumnConstraints maxWidth="Infinity"
      halignment="CENTER" hgrow="ALWAYS">
    </ColumnConstraints>
  </columnConstraints>

  <Label fx:id="editUserLabel" text=""
    GridPane.rowIndex="0"
    GridPane.columnSpan="2"
    GridPane.valignment="TOP"
    GridPane.halignment="LEFT">
    <font>
      <Font size="20"></Font>
    </font>
  </Label>

  <TextField fx:id="nameField" prefWidth="100"
    text=""
    GridPane.columnIndex="0" GridPane.rowIndex="1"
    GridPane.columnSpan="1" GridPane.rowSpan="1"
    GridPane.halignment="CENTER">
  </TextField>

  <Button text="Update Name"
    prefWidth="200" prefHeight="30"
    GridPane.columnIndex="1" GridPane.rowIndex="1"
    GridPane.columnSpan="1" GridPane.rowSpan="1"
    GridPane.halignment="CENTER"
    onAction="#handleUpdateNameButton">
  </Button>


  <TextField fx:id="passwordField" prefWidth="100"
    text=""
    GridPane.columnIndex="0" GridPane.rowIndex="2"
    GridPane.columnSpan="1" GridPane.rowSpan="1"
    GridPane.halignment="CENTER">
  </TextField>

  <Button text="Update Password"
    prefWidth="200" prefHeight="30"
    GridPane.columnIndex="1" GridPane.rowIndex="2"
    GridPane.columnSpan="1" GridPane.rowSpan="1"
    GridPane.halignment="CENTER"
    onAction="#handleUpdatePasswordButton">
  </Button>

</GridPane>
